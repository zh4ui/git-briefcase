<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Serve web documents in git.">
    <title>Git Docity</title>
    
    <link rel="stylesheet" href="/assets/pure/1.0.0/pure-min.css">
    
    <!--[if lte IE 8]>
        <link rel="stylesheet" href="/assets/pure/1.0.0/grids-responsive-old-ie-min.css">
    <![endif]-->
    <!--[if gt IE 8]><!-->
        <link rel="stylesheet" href="/assets/pure/1.0.0/grids-responsive-min.css">
    <!--<![endif]-->

    <link rel="stylesheet" href="/assets/fontawesome/5.0.2/css/fontawesome-all.min.css">

    <link rel="stylesheet" href="/assets/custom/css/docity.css">

</head>
<body>
<div class="pure-menu pure-menu-horizontal docity-title">
    <a href="#" class="pure-menu-heading">Git Docity</a>
</div>
<div class="docity-body">

<div class="pure-g">
    <div class="pure-u-md-2-3">
    <div class="docity-left-column">
    <div>
        <input type="text">
    </div>
    {{range $gitdir, $doc := .Docs}}
        <div class="docity-card">
        <span class="pin-star">
            <i class="far fa-star"></i>
        </span>
            <h3> {{$gitdir}} </h3>
            <p class="description">
            {{if ne $doc.Description ""}}
                {{$doc.Description}}
            {{else}}
                No description.
            {{end}}
            </p>
            <a class="pure-button pure-button-primary" href="{{$doc.GetViewUrlPath $gitdir}}" target="_blank">
            <i class="fas fa-eye"></i> View 
            </a>
            <a class="pure-button" href="{{$doc.GetConfUrlPath $gitdir}}" target="_blank">
            <i class="fas fa-wrench"></i> Configure
            </a>
        </div>
    {{end}}
    </div> <!-- docity-left-column -->
    </div>
    <div class="pure-u-md-1-3">
        <div class="docity-right-column">
            <div>
                <button class="pure-button pure-button-primary"> 
                    <i class="fas fa-plus-circle"></i>
                    Create Docit
                </button>
            </div>
            <div class="docity-pinned">
                <h3> Pinned </h3>
                <ul>
                    <li>
                        <a href="/view/filemaker16en/Open Help.html">filemaker16en</a>
                        <span class="pin-star"><i class="fas fa-star"></i></span>
                    </li>
                </ul>
            </div>
            <div class="docity-recent">
                <h3> Recent </h3>
                <ul>
                    <li>
                        <a href="/view/filemaker16en/Open Help.html">filemaker16en</a>
                        <spn class="pin-star"><i class="far fa-times-circle"></i></span>
                    </li>
                </ul>
            </div>
        </div> <!-- docity-right-column -->
    </div>
</div>
</div>
</body>
</html>
